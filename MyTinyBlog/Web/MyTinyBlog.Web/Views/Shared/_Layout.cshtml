<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div id="main">

        <!-- Header -->
        <div id="header">
            <div id="logo">
                <div id="logo_text">
                    <h1><a href="/">My Tiny<span class="logo_colour">Blog</span></a></h1>
                    <h2>Writings, Experiments and More...</h2>
                </div>

            </div>

            <!-- Navigation -->
            <div id="menubar">
                <ul id="menu">
                    <li class="selected">@Html.ActionLink("Posts", "Posts", "Blog")</li>
                    <li>@Html.ActionLink("Contact", "Contact")</li>
                    <li>@Html.ActionLink("About Me", "AboutMe")</li>
                </ul>
            </div>
        </div>

        <!-- Site Content -->
        <div id="site_content">
            @* Call the child action to render the sidebar *@
            @Html.Action("Sidebars")
            @RenderBody()
        </div>

        <!-- Footer -->
        <div id="footer">
            Copyright &copy; @DateTime.Now.Year MyTinyBlog All Rights Reserved
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var selector = '#menu li';

        $(selector).on('click', function () {
            $(selector).removeClass('selected');
            $(this).addClass('selected');
        });
    </script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>
</body>
</html>
