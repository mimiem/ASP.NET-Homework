@using MyTinyBlog.Web.Extensions
@model IEnumerable<MyTinyBlog.Web.MyTinyBlog.Web.ViewModels.Blog.TagViewModel>

<div class="sidebar">
    <h3>Tags</h3>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var tag in Model)
            {
                <li>@Html.TagLink(tag)</li>
            }
        </ul>
    }
    else
    {
        <p>No tags found!</p>
    }
</div>