@using MyTinyBlog.Web.Extensions
@model IEnumerable<MyTinyBlog.Web.MyTinyBlog.Web.ViewModels.Blog.BlogPostViewModel>

<div>
    <h3>Latest Posts</h3>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
