        <input class="search" type="text" name="search_field" value="Enter keywords..."/>
        <input name="search" type="image" style="border: 0; margin: 0 0 -9px 5px" alt="Search" title="Search" src="~/Content/themes/simple/images/search.png">
    </p>
}
