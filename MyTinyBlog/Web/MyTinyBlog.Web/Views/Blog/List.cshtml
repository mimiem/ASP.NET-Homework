@model IEnumerable<MyTinyBlog.Web.MyTinyBlog.Web.ViewModels.Blog.BlogPostViewModel>

<div id="content">

    <h1>@ViewBag.Title</h1>

    @Html.Partial("_Pager", Model)

    @if (Model.Count() > 0)
    {
        foreach (var post in Model)
        {
            @Html.Partial("_PostTemplate", post)
        }
    }
    else
    {
        <p>No posts found!</p>
    }

    @Html.Partial("_Pager", Model)

</div>